<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:id="@+id/iv_game"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_game_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_game"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="一个AI能有多会聊天一个AI能有多会聊天一个AI能有多会聊天一个AI能有多会聊天一个AI能有多会聊天"
        android:maxLines="2"
        android:ellipsize="end"
         />

    <TextView
        android:id="@+id/tv_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_game_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_game"
        android:gravity="start|bottom"
        android:textSize="12sp"
        android:textColor="@color/gray_979797"
        android:textStyle="normal"
        android:text="19:40"
        />

</androidx.constraintlayout.widget.ConstraintLayout>